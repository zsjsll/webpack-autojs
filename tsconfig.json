{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "target": "es5",
        "allowJs": false,
        "typeRoots": [
            "./@types",
            "./node_modules/@types",
            "./node_modules/@autojs",
            "./node_modules/@sm003/autojs6-dts/declarations"
        ],
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
